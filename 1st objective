import streamlit as st
import pandas as pd
import plotly.express as px

# 1. Configuration and Caching
# Set a wide layout for better visualization
st.set_page_config(
    page_title="Social Media Usage Analysis",
    layout="wide"
)

# Use st.cache_data to load data only once, improving performance
@st.cache_data
def load_data():
    """Loads the CSV file from the GitHub URL."""
    url = 'https://raw.githubusercontent.com/hanis-khairudin/assignment_scivis2025/refs/heads/main/FULLTIME%20STUDENT%20USING%20SOCIAL%20MEDIA.csv'
    try:
        arts_df = pd.read_csv(url)
        return arts_df
    except Exception as e:
        st.error(f"Error loading data: {e}")
        return pd.DataFrame()
